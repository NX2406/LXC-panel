#!/usr/bin/env bash
# LXD 实例管理脚本 - 修复重装Bug版
# 2025.11.12 Fix Rebuild Error

# --- 0. 启动立即响应 ---
echo "正在加载脚本资源，请稍候..."

# --- 颜色配置 ---
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
SKYBLUE='\033[0;36m'
PLAIN='\033[0m'
DIVIDER="${SKYBLUE}------------------------------------------------------${PLAIN}"

# --- 1. 环境自检 ---

check_root() {
    [ "$(id -u)" != "0" ] && { echo -e "${RED}错误: 必须使用 Root 运行${PLAIN}"; exit 1; }
}

install_host_dependencies() {
    if ! command -v jq >/dev/null 2>&1 || ! command -v bc >/dev/null 2>&1; then
        echo -e "${SKYBLUE}正在安装宿主机依赖 (jq, bc, dos2unix)...${PLAIN}"
        if command -v apt-get >/dev/null 2>&1; then
            apt-get update -y >/dev/null 2>&1
            apt-get install -y jq bc dos2unix curl >/dev/null 2>&1
        elif command -v yum >/dev/null 2>&1; then
            yum install -y jq bc dos2unix curl >/dev/null 2>&1
        elif command -v apk >/dev/null 2>&1; then
            apk add jq bc dos2unix curl >/dev/null 2>&1
        fi
    fi
}

check_lxd_env() {
    if ! command -v lxc >/dev/null 2>&1; then
        echo -e "${YELLOW}正在安装 LXD...${PLAIN}"
        if command -v apt-get >/dev/null 2>&1; then apt-get install lxd -y
        elif command -v yum >/dev/null 2>&1; then yum install lxd -y
        elif command -v apk >/dev/null 2>&1; then apk add lxd
        fi
    fi
    if ! lxc storage list >/dev/null 2>&1 || [ -z "$(lxc storage list --format csv)" ]; then
        echo -e "${YELLOW}LXD 未初始化，执行自动初始化...${PLAIN}"
        lxd init --auto
    fi
}

init_env() {
    check_root
    install_host_dependencies
    rm -rf lxd.tar.xz rootfs.squashfs *.zip *.zip.* ChangeMirrors.sh ssh_*.sh config.sh
}

# --- 2. 基础工具 ---

detect_ip_info() {
    country_code=$(curl -m 5 -s https://ipapi.co/json | jq -r '.country_code' 2>/dev/null)
    [[ -z "$country_code" ]] && country_code=$(curl -m 5 -s https://api.ip.sb/geoip | jq -r '.country_code' 2>/dev/null)
    [[ "$country_code" == "CN" ]] && CN=true || CN=false
}

check_cdn_file() {
    echo -e "${SKYBLUE}正在优选下载线路...${PLAIN}"
    cdn_urls=("https://cdn0.spiritlhl.top/" "http://cdn1.spiritlhl.net/" "http://cdn2.spiritlhl.net/" "http://cdn3.spiritlhl.net/" "http://cdn4.spiritlhl.net/")
    local shuffled=($(shuf -e "${cdn_urls[@]}")) 
    for url in "${shuffled[@]}"; do
        if curl -4 -sL -k "${url}https://raw.githubusercontent.com/spiritLHLS/ecs/main/back/test" --max-time 3 | grep -q "success"; then
            export cdn_success_url="$url"
            return
        fi
    done
}

get_system_arch() {
    sysarch="$(uname -m)"
    case "${sysarch}" in
        "x86_64"|"amd64") sys_bit="x86_64" ;;
        "aarch64"|"armv8") sys_bit="aarch64" ;;
        *) sys_bit="x86_64" ;;
    esac
}

# --- 3. 核心创建逻辑 (修复 Alias 问题) ---

process_image() {
    image_download_url=""; fixed_system=false; final_alias=""
    echo -e "${SKYBLUE}正在解析镜像信息...${PLAIN}"
    
    if [[ "$sys_bit" == "x86_64" || "$sys_bit" == "arm64" ]]; then
        self_fixed_images=($(curl -slk -m 6 ${cdn_success_url}https://raw.githubusercontent.com/oneclickvirt/lxd_images/main/${sys_bit}_all_images.txt))
        for image_name in "${self_fixed_images[@]}"; do
             if [[ -n "$b" ]]; then if [[ "$image_name" == "${a}_${b}"* ]]; then use_fixed_image "$image_name"; break; fi
             else if [[ "$image_name" == "${a}"* ]]; then use_fixed_image "$image_name"; break; fi; fi
        done
    fi
    
    if [ -z "$image_download_url" ]; then
        local type_flag="container"; [ "$is_vm" == true ] && type_flag="virtual-machine"
        system=$(lxc image list images:${a}/${b} --format=json | jq -r --arg ARCHITECTURE "$sys_bit" --arg TYPE "$type_flag" '.[] | select(.type == $TYPE and .architecture == $ARCHITECTURE) | .aliases[0].name' | head -n 1)
        if [ -n "$system" ]; then 
            echo -e "${GREEN}使用官方镜像: ${system}${PLAIN}"
            fixed_system=false
            final_alias="images:${system}" # 官方镜像直接使用
        fi
    fi
    
    if [ -z "$image_download_url" ] && [ -z "$system" ]; then echo -e "${RED}错误：未找到镜像${PLAIN}"; exit 1; fi
}

use_fixed_image() {
    local full_name=$1; fixed_system=true
    image_download_url="https://github.com/oneclickvirt/lxd_images/releases/download/${a}/${full_name}"
    
    # === 关键修复：去除 .zip 后缀作为别名 ===
    # 例如: ubuntu_22.04.zip -> ubuntu_22.04
    local alias_name="${full_name%.*}"
    final_alias="$alias_name"

    # 检查本地是否已存在该别名
    if [[ $(lxc image alias list) != *"$alias_name"* ]]; then
        echo -e "${SKYBLUE}下载自定义镜像...${PLAIN}"
        wget -O "lxd_image.zip" "${cdn_success_url}${image_download_url}" || { echo -e "${RED}下载失败${PLAIN}"; exit 1; }
        unzip -o "lxd_image.zip"; rm -f "lxd_image.zip"
        
        # 导入时使用纯净的别名
        lxc image import lxd.tar.xz rootfs.squashfs --alias "$alias_name"
        rm -rf lxd.tar.xz rootfs.squashfs
    else
        echo -e "${GREEN}镜像已缓存 (Alias: $alias_name)${PLAIN}"
    fi
}

create_container() {
    echo -e "${SKYBLUE}正在配置实例: $name ...${PLAIN}"
    
    # 小数 CPU 计算
    if [[ "$cpu" == *.* ]]; then
        cpu_count=$(echo "$cpu" | awk '{print int($1+0.99)}')
        cpu_allowance=$(echo "$cpu * 100 / $cpu_count" | bc)
        cpu_config="-c limits.cpu=$cpu_count -c limits.cpu.allowance=${cpu_allowance}%"
    else
        cpu_config="-c limits.cpu=$cpu"
    fi

    # === 重装逻辑 (Rebuild) ===
    if [ "$is_rebuild" == "true" ]; then
        echo -e "${YELLOW}正在停止容器并重置系统...${PLAIN}"
        lxc stop "$name" --force >/dev/null 2>&1
        
        # 使用处理好的 final_alias 进行重装
        echo -e "使用镜像: ${GREEN}$final_alias${PLAIN}"
        lxc rebuild "$name" "$final_alias"
        
        if [ $? -ne 0 ]; then
             echo -e "${RED}重装失败! 请尝试删除实例后重新创建。${PLAIN}"
             return 1
        fi
        
        # 重装后重新启动
        lxc start "$name"
    else
        # === 新建逻辑 ===
        if lxc info "$name" >/dev/null 2>&1; then lxc delete "$name" --force; fi
        local args="$cpu_config -c limits.memory=${memory}MiB -s default"
        [ "$is_vm" == true ] && args="--vm $args"
        
        lxc init "$final_alias" "$name" $args
    fi
    
    if [ $? -ne 0 ]; then echo -e "${RED}操作失败!${PLAIN}"; return 1; fi
    return 0
}

configure_storage() {
    [ "$is_rebuild" == "true" ] && return
    local st="btrfs"; [ -f /usr/local/bin/lxd_storage_type ] && st=$(cat /usr/local/bin/lxd_storage_type)
    [[ $disk == *.* ]] && d_mb=$(echo "$disk * 1024" | bc | cut -d. -f1)MB || d_mb="${disk}GB"
    lxc storage create "$name" "$st" size="$d_mb" >/dev/null 2>&1
    lxc config device override "$name" root size="$d_mb"
    lxc config device set "$name" root limits.max "$d_mb"
}

configure_resources() {
    lxc config device set "$name" root limits.read 500MB
    lxc config device set "$name" root limits.write 500MB
    lxc config device set "$name" root limits.read 5000iops
    lxc config device set "$name" root limits.write 5000iops
    lxc config set "$name" security.nesting true
    if [ "$is_vm" == true ]; then lxc config set "$name" security.secureboot=false; else lxc config set "$name" limits.memory.swap true; fi
}

setup_system() {
    echo -e "${SKYBLUE}启动系统...${PLAIN}"; ori=$(date | md5sum); passwd=${ori:2:9}
    # 确保运行状态
    if ! lxc info "$name" | grep -q "Status: Running"; then
        lxc start "$name"
        sleep 4
    fi
    
    if [ "$is_vm" == true ]; then return; fi
    if [ "$fixed_system" = false ]; then setup_mirrors; install_packages; fi
    setup_ssh; configure_ipv6
}

setup_mirrors() {
    [[ "$mirror_choice" == "off" || "$system" == *"win"* ]] && return
    local use_cn=false; [[ "$mirror_choice" == "cn" || ("$mirror_choice" == "auto" && "$CN" == true) ]] && use_cn=true
    if [ "$use_cn" == true ]; then
        lxc exec "$name" -- curl -lk https://gitee.com/SuperManito/LinuxMirrors/raw/main/ChangeMirrors.sh -o ChangeMirrors.sh
        lxc exec "$name" -- chmod 777 ChangeMirrors.sh
        lxc exec "$name" -- ./ChangeMirrors.sh --source mirrors.tuna.tsinghua.edu.cn --web-protocol http --intranet false --backup true --updata-software false --clean-cache false --ignore-backup-tips
        lxc exec "$name" -- rm -rf ChangeMirrors.sh
    fi
}

install_packages() {
    echo "安装基础组件..."
    if echo "$system" | grep -qiE "fedora|rocky|almalinux|oracle|centos"; then 
        lxc exec "$name" -- dnf install -y curl dos2unix >/dev/null 2>&1 || lxc exec "$name" -- yum install -y curl dos2unix >/dev/null 2>&1
    elif echo "$system" | grep -qiE "archlinux"; then 
        lxc exec "$name" -- pacman -Sy --noconfirm curl dos2unix >/dev/null 2>&1
    elif echo "$system" | grep -qiE "alpine"; then 
        lxc exec "$name" -- apk add --no-cache curl >/dev/null 2>&1
    else 
        lxc exec "$name" -- apt-get update -y >/dev/null 2>&1
        lxc exec "$name" -- apt-get install curl dos2unix -y >/dev/null 2>&1
    fi
}

setup_ssh() {
    local st="bash"; echo "$system" | grep -qiE "alpine|openwrt" && st="sh"
    local sn="ssh_${st}.sh"
    [ ! -f "/usr/local/bin/$sn" ] && curl -L "${cdn_success_url}https://raw.githubusercontent.com/oneclickvirt/lxd/main/scripts/$sn" -o "/usr/local/bin/$sn" && chmod 777 "/usr/local/bin/$sn" && dos2unix "/usr/local/bin/$sn"
    lxc file push "/usr/local/bin/$sn" "$name"/root/
    lxc exec "$name" -- chmod 777 "$sn"
    if [ "$st" == "sh" ]; then lxc exec "$name" -- ./"$sn" ${passwd}
    else 
        lxc exec "$name" -- dos2unix "$sn"
        lxc exec "$name" -- sudo ./"$sn" $passwd
        [ ! -f /usr/local/bin/config.sh ] && curl -L ${cdn_success_url}https://raw.githubusercontent.com/oneclickvirt/lxd/main/scripts/config.sh -o /usr/local/bin/config.sh && chmod +x /usr/local/bin/config.sh && dos2unix /usr/local/bin/config.sh
        lxc file push /usr/local/bin/config.sh "$name"/root/
        lxc exec "$name" -- bash config.sh
    fi
}

configure_port() {
    [ "$is_rebuild" == "true" ] && return
    echo -e "${SKYBLUE}配置网络...${PLAIN}"; [ "$is_vm" == true ] && mr=20 || mr=5
    for ((j=1; j<=mr; j++)); do sleep 3; container_ip=$(lxc list "$name" --format json | jq -r '.[0].state.network.eth0.addresses[]? | select(.family=="inet") | .address'); [ -n "$container_ip" ] && break; done
    if [ -z "$container_ip" ]; then echo -e "${RED}无IP，跳过端口映射${PLAIN}"; return; fi
    ipv4_address=$(ip addr show | awk '/inet .*global/ && !/inet6/ {print $2}' | sed -n '1p' | cut -d/ -f1)
    
    lxc config device override "$name" eth0 ipv4.address="$container_ip" 2>/dev/null || lxc config device set "$name" eth0 ipv4.address "$container_ip" 2>/dev/null
    
    if ! lxc config device show "$name" | grep -q "ssh-port"; then
        lxc config device add "$name" ssh-port proxy listen=tcp:$ipv4_address:$curr_sshn connect=tcp:$container_ip:22 nat=true
    fi
    
    if [ "$curr_nat1" != "0" ] && [ "$curr_nat2" != "0" ]; then 
        if ! lxc config device show "$name" | grep -q "nattcp-ports"; then
            lxc config device add "$name" nattcp-ports proxy listen=tcp:$ipv4_address:$curr_nat1-$curr_nat2 connect=tcp:0.0.0.0:$curr_nat1-$curr_nat2 nat=true
            lxc config device add "$name" natudp-ports proxy listen=udp:$ipv4_address:$curr_nat1-$curr_nat2 connect=udp:0.0.0.0:$curr_nat1-$curr_nat2 nat=true
        fi
    fi
}

configure_ipv6() {
    if [ "$enable_ipv6" == "y" ] && [ "$is_vm" == false ]; then [ ! -f "./build_ipv6_network.sh" ] && curl -L ${cdn_success_url}https://raw.githubusercontent.com/oneclickvirt/lxd/main/scripts/build_ipv6_network.sh -o build_ipv6_network.sh && chmod +x build_ipv6_network.sh; ./build_ipv6_network.sh "$name"; fi
}

configure_network_speed() {
    [ "$is_vm" == true ] && return
    local limit_mbit=$(( in * 8 ))
    lxc config device set "$name" eth0 limits.egress "${limit_mbit}Mbit"
    lxc config device set "$name" eth0 limits.ingress "${limit_mbit}Mbit"
    lxc config device set "$name" eth0 limits.max "${limit_mbit}Mbit"
}

# --- 4. 批量执行逻辑 ---

run_batch_creation() {
    a="${system%%[0-9]*}"; b="${system##*[!0-9.]}"
    if [[ "$system" == "rockylinux9" ]]; then a="rockylinux"; b="9"; 
    elif [[ "$system" == "almalinux9" ]]; then a="almalinux"; b="9"; fi
    get_system_arch; process_image
    
    for ((i=1; i<=count; i++)); do
        if [ "$count" -eq 1 ]; then name="$basename"; else name="${basename}${i}"; fi
        curr_sshn=$((sshn_start + i - 1))
        if [ "$nat_start" != "0" ]; then
            port_range=$((nat_end - nat_start))
            curr_nat1=$((nat_start + (i-1) * (port_range + 1)))
            curr_nat2=$((curr_nat1 + port_range))
        else curr_nat1=0; curr_nat2=0; fi

        echo -e "${DIVIDER}"
        echo -e "正在创建第 $i / $count 个实例: ${GREEN}$name${PLAIN}"
        
        create_container
        if [ $? -eq 0 ]; then
            configure_storage; configure_resources; setup_system; configure_port; configure_network_speed
            lxc config set "$name" user.description "$name $curr_sshn $passwd $curr_nat1 $curr_nat2"
            echo -e "${GREEN}$name 创建成功!${PLAIN}"
            sleep 3 
        fi
    done
    rm -f lxd_image.zip lxd.tar.xz rootfs.squashfs
    echo -e "${GREEN}批量任务完成！${PLAIN}"
    read -p "按回车返回..." d
}

# --- 5. 单实例管理 (重装修复版) ---

manage_single_instance() {
    while true; do
        clear
        echo -e "${GREEN}=== 单实例管理 ===${PLAIN}"
        local names=($(lxc list --format csv -c n))
        if [ ${#names[@]} -eq 0 ]; then echo -e "${YELLOW}无实例。${PLAIN}"; read -p "回车返回..." d; return; fi
        for i in "${!names[@]}"; do
             status=$(lxc list "${names[$i]}" --format json | jq -r '.[0].status')
             printf "%2d) %-15s [%s]\n" $((i+1)) "${names[$i]}" "$status"
        done
        echo " 0) 返回"
        read -p "选择容器: " idx; [ "$idx" == "0" ] && return
        target_name="${names[$((idx-1))]}"
        
        echo -e "\n对 ${SKYBLUE}$target_name${PLAIN} 进行操作:"
        echo "1. 启动 (Start)"
        echo "2. 停止 (Stop)"
        echo "3. 重启 (Restart)"
        echo "4. 重装系统 (Rebuild) [数据丢失!]"
        read -p "选择 [1-4]: " act
        case $act in
            1) lxc start "$target_name"; echo "指令已发送";;
            2) lxc stop "$target_name"; echo "指令已发送";;
            3) lxc restart "$target_name"; echo "指令已发送";;
            4) 
                echo -e "${RED}警告: 重装将清除容器内所有数据，但保留IP和端口映射。${PLAIN}"
                read -p "确认重装? (y/n): " confirm
                if [ "$confirm" == "y" ]; then
                    echo -e "选择新系统: [1]Debian12 [2]Ubuntu22 [3]CentOS7"
                    read -p "选择 [1]: " ros; 
                    case $ros in 2) system="ubuntu22.04";; 3) system="centos7";; *) system="debian12";; esac
                    
                    name="$target_name"; is_rebuild="true"; fixed_system=false
                    
                    # 重新获取配置（如CPU/内存），为了重装不丢失限制
                    # 这里为了简化，我们仅保留网络配置，CPU/Memory 需要重新设置或沿用上次的
                    # 获取当前CPU限制
                    cur_cpu=$(lxc config get "$name" limits.cpu)
                    [ -z "$cur_cpu" ] && cpu="1" || cpu="$cur_cpu"
                    cur_mem=$(lxc config get "$name" limits.memory)
                    [ -z "$cur_mem" ] && memory="256" || memory=$(echo $cur_mem | tr -cd '[0-9]')

                    a="${system%%[0-9]*}"; b="${system##*[!0-9.]}"
                    check_cdn_file; get_system_arch; process_image
                    
                    create_container # 走 rebuild
                    if [ $? -eq 0 ]; then
                        configure_resources; setup_system
                        # 更新描述中的密码
                        old_desc=$(lxc config get "$name" user.description)
                        read -r -a d_arr <<< "$old_desc"
                        # d_arr[0]=name, [1]=ssh, [2]=pass, [3]=nat1, [4]=nat2
                        lxc config set "$name" user.description "${d_arr[0]} ${d_arr[1]} $passwd ${d_arr[3]} ${d_arr[4]}"
                        echo -e "${GREEN}重装完成! 新密码: $passwd${PLAIN}"
                    fi
                fi
                ;;
        esac
        read -p "按回车继续..." d
    done
}

# --- 6. 其他菜单 ---

manage_all_menu() {
    clear
    echo -e "${GREEN}=== 批量开关管理 ===${PLAIN}"
    echo "1. 开启所有容器"
    echo "2. 关闭所有容器"
    echo "0. 返回"
    read -p "请选择: " ma
    case $ma in
        1) echo "正在启动..."; lxc list --format csv -c n | xargs -I {} lxc start {}; echo "完成。";;
        2) echo "正在停止..."; lxc list --format csv -c n | xargs -I {} lxc stop {}; echo "完成。";;
        *) return ;;
    esac
    read -p "按回车返回..." d
}

add_host_swap() {
    clear; echo -e "${GREEN}宿主机 Swap 管理${PLAIN}"
    current_swap=$(free -m | awk '/Swap/ {print $2}')
    echo -e "当前 Swap: ${SKYBLUE}${current_swap} MB${PLAIN}"
    read -p "增加 Swap (MB) [1024]: " swap_size; swap_size=${swap_size:-1024}
    dd if=/dev/zero of=/swapfile bs=1M count=$swap_size
    chmod 600 /swapfile; mkswap /swapfile; swapon /swapfile
    if ! grep -q "/swapfile" /etc/fstab; then echo "/swapfile none swap sw 0 0" >> /etc/fstab; fi
    echo -e "${GREEN}Swap 创建成功!${PLAIN}"; read -p "回车返回..." d
}

enable_bbr() {
    if ! grep -q "net.core.default_qdisc=fq" /etc/sysctl.conf; then
        echo "net.core.default_qdisc=fq" >> /etc/sysctl.conf
        echo "net.ipv4.tcp_congestion_control=bbr" >> /etc/sysctl.conf
        sysctl -p
    fi
    echo -e "${GREEN}BBR 已开启${PLAIN}"; read -p "回车返回..." d
}

view_instances() {
    clear
    local names=$(lxc list --format csv -c n)
    if [ -z "$names" ]; then echo "无实例"; read -p "回车返回..." d; return; fi
    printf "%-15s %-10s %-10s %-15s\n" "名称" "状态" "SSH端口" "Root密码"
    echo -e "${DIVIDER}"
    for c in $names; do
        info=$(lxc list "$c" --format json)
        status=$(echo "$info" | jq -r '.[0].status')
        desc=$(lxc config get "$c" user.description 2>/dev/null)
        read -r -a d_arr <<< "$desc"
        ssh_p="${d_arr[1]}"; pass="${d_arr[2]}"; [ -z "$ssh_p" ] && ssh_p="-"; [ -z "$pass" ] && pass="-"
        [ "$status" == "Running" ] && color=$GREEN || color=$RED
        printf "%-15s ${color}%-10s${PLAIN} %-10s %-15s\n" "$c" "$status" "$ssh_p" "$pass"
    done
    read -p "回车返回..." d
}

reconfigure_container() {
    while true; do
        clear
        echo -e "${GREEN}=== 容器配置修改 ===${PLAIN}"
        local names=($(lxc list --format csv -c n))
        if [ ${#names[@]} -eq 0 ]; then echo -e "${YELLOW}无实例。${PLAIN}"; read -p "回车返回..." d; return; fi
        for i in "${!names[@]}"; do printf "%2d) %s\n" $((i+1)) "${names[$i]}"; done
        echo " 0) 返回"
        read -p "输入编号: " idx; [ "$idx" == "0" ] && return
        target_name="${names[$((idx-1))]}"
        clear; echo "目标: $target_name"
        echo "1. 修改 CPU (支持小数)"
        echo "2. 修改 内存"
        echo "3. 修改 硬盘"
        echo "4. 修改 网速 (MB/s)"
        read -p "选择: " opt
        case $opt in
            1) 
                read -p "输入新CPU (如 0.5): " new_cpu
                if [[ "$new_cpu" == *.* ]]; then
                    cpu_c=$(echo "$new_cpu" | awk '{print int($1+0.99)}')
                    cpu_a=$(echo "$new_cpu * 100 / $cpu_c" | bc)
                    lxc config set "$target_name" limits.cpu "$cpu_c"
                    lxc config set "$target_name" limits.cpu.allowance "${cpu_a}%"
                else
                    lxc config set "$target_name" limits.cpu "$new_cpu"
                    lxc config set "$target_name" limits.cpu.allowance "100%"
                fi
                echo "CPU已修改";;
            2) read -p "输入内存 (如 512MiB): " v; lxc config set "$target_name" limits.memory "$v";;
            3) read -p "输入硬盘 (如 5GB): " v; lxc config device override "$target_name" root size="$v" 2>/dev/null || lxc config device set "$target_name" root size="$v";;
            4) read -p "输入网速 MB/s: " v; mbit=$((v*8)); lxc config device set "$target_name" eth0 limits.max "${mbit}Mbit";;
        esac
        read -p "回车继续..." d
    done
}

start_wizard() {
    clear
    echo -e "${GREEN}创建向导${PLAIN}"
    read -p "1. 基础名称 (如 test): " basename; basename=${basename:-test}
    read -p "2. 创建数量 (如 1): " count; count=${count:-1}
    read -p "3. CPU核数 (支持小数,如 0.5): " cpu; cpu=${cpu:-1}
    read -p "4. 内存MB [256]: " memory; memory=${memory:-256}
    read -p "5. 硬盘GB [2]: " disk; disk=${disk:-2}

    echo -e "\n系统: [1]Debian12 [2]Debian11 [3]Ubuntu22 [4]CentOS7 [5]Alpine"
    read -p "选择 [1]: " os_c
    case $os_c in
        2) system="debian11" ;; 3) system="ubuntu22.04" ;; 4) system="centos7" ;; 5) system="alpine3.19" ;;
        *) system="debian12" ;;
    esac
    is_vm=false; mirror_choice="auto"
    
    echo -e "\n端口设置 (自动递增):"
    read -p "起始 SSH 端口 [20001]: " sshn_start; sshn_start=${sshn_start:-20001}
    read -p "起始 NAT 端口 [30000] (0禁用): " nat_start; nat_start=${nat_start:-30000}
    if [ "$nat_start" != "0" ]; then
        read -p "每个实例 NAT 结束端口 [30025]: " nat_end; nat_end=${nat_end:-30025}
    else nat_end=0; fi
    
    read -p "限速 MB/s [10]: " in_mb; in_mb=${in_mb:-10}
    in=$in_mb
    
    check_cdn_file
    is_rebuild="false"
    run_batch_creation
}

main_menu() {
    while true; do
        clear
        echo "=================================================="
        echo -e "      ${GREEN}LXD 终极管理面板 (Fixed V4)${PLAIN}"
        echo "=================================================="
        echo -e " 1. ${SKYBLUE}创建实例${PLAIN}"
        echo -e " 2. ${SKYBLUE}查看列表${PLAIN}"
        echo -e " 3. ${GREEN}单机管理${PLAIN} (开关/重装) [HOT]"
        echo -e " 4. ${GREEN}修改配置${PLAIN} (CPU/内存/网速)"
        echo "--------------------------------------------------"
        echo -e " 5. ${YELLOW}批量开关${PLAIN} (数字菜单)"
        echo -e " 6. ${YELLOW}宿主Swap${PLAIN}"
        echo -e " 7. 开启 BBR 加速"
        echo "--------------------------------------------------"
        echo -e " 0. 退出"
        echo "=================================================="
        read -p "请选择: " choice
        case $choice in
            1) start_wizard ;;
            2) view_instances ;; 
            3) manage_single_instance ;;
            4) reconfigure_container ;; 
            5) manage_all_menu ;;
            6) add_host_swap ;;
            7) enable_bbr ;;
            0) exit 0 ;;
            *) ;;
        esac
    done
}

main() { init_env; check_lxd_env; detect_ip_info; check_cdn_file; main_menu; }
main "$@"
